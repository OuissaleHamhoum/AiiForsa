# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Groq API Configuration (for AI Interviewer)
GROQ_API_KEY=your_groq_api_key_here

LM_STUDIO_HOST=http://127.0.0.1:1234
LMSTUDIO_URL=http://localhost:1234/v1/chat/completions
# Alternative for direct WSL: LM_STUDIO_HOST=http://172.X.X.X:1234 (your Windows host IP)

# Qwen Model Configuration
QWEN_MODEL=qwen2.5-vl-7b

# LM Studio Timeout Configuration (seconds)
# Increase this if you experience timeout errors during long LLM requests
LM_STUDIO_TIMEOUT=900

# Application Configuration
APP_HOST=localhost
APP_PORT=7861
DEBUG=true

# CV Template Path
CV_TEMPLATE_PATH=./cv_template_camelCase.json
JOB_DESCRIPTIONS_PATH=./job_descriptions.json

# Optional: Web scraping timeout (seconds)
WEB_SCRAPE_TIMEOUT=10

# Optional: Maximum file upload size (MB)
MAX_UPLOAD_SIZE_MB=10
